{
  "manifest_version": 3,
  "name": "Deuxième Cerveau",
  "version": "1.0.0",
  "description": "Deuxième Cerveau dans un side panel Chrome",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://volitionary-prince-springily.ngrok-free.dev/*",
    "https://top-operand-473602-h0.uc.r.appspot.com/*",
    "http://localhost:5000/*",
    "https://cdnjs.cloudflare.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*",
    "https://cdn.tailwindcss.com/*",
    "https://images.unsplash.com/*"
  ],
  "action": {
    "default_title": "Ouvrir Deuxième Cerveau"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
