<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fusion Intelligente - Organisation IA</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .fusion-item {
            transition: all 0.3s ease;
        }
        .fusion-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .loading {
            display: none;
        }
        .loading.active {
            display: flex;
        }
        .organized-content {
            background: white;
            color: #333;
            padding: 2rem;
            border-radius: 10px;
            max-height: 600px;
            overflow-y: auto;
        }
        .organized-content h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #667eea;
        }
        .organized-content h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-top: 1.5rem;
            margin-bottom: 0.75rem;
            color: #764ba2;
        }
        .organized-content ul {
            list-style: disc;
            margin-left: 2rem;
            margin-bottom: 1rem;
        }
        .organized-content li {
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body class="min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="glass rounded-2xl p-8 mb-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-white mb-2">
                        <i class="fas fa-brain mr-3"></i>
                        Fusion Intelligente
                    </h1>
                    <p class="text-white text-opacity-80">
                        Organisation automatique de vos notes par IA
                    </p>
                </div>
                <button onclick="window.location.href='/'" class="bg-white bg-opacity-20 hover:bg-opacity-30 text-white px-6 py-3 rounded-lg transition">
                    <i class="fas fa-home mr-2"></i>
                    Retour
                </button>
            </div>
        </div>

        <!-- Status API -->
        <div id="apiStatus" class="glass rounded-xl p-4 mb-6 hidden">
            <div class="flex items-center">
                <i class="fas fa-circle text-green-400 mr-3 animate-pulse"></i>
                <span class="text-white">API IA connectée</span>
            </div>
        </div>

        <!-- Liste des fusions -->
        <div class="glass rounded-2xl p-8 mb-8">
            <h2 class="text-2xl font-bold text-white mb-6">
                <i class="fas fa-folder-open mr-2"></i>
                Sélectionnez une fusion à organiser
            </h2>
            
            <div id="fusionsList" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- Les fusions seront chargées ici -->
            </div>
            
            <div id="noFusions" class="text-center text-white text-opacity-60 py-8 hidden">
                <i class="fas fa-inbox text-6xl mb-4"></i>
                <p>Aucune fusion disponible</p>
                <p class="text-sm mt-2">Créez d'abord une fusion depuis la page principale</p>
            </div>
        </div>

        <!-- Loading -->
        <div id="loading" class="loading fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50">
            <div class="glass rounded-2xl p-8 text-center">
                <i class="fas fa-spinner fa-spin text-6xl text-white mb-4"></i>
                <p class="text-white text-xl">Organisation en cours...</p>
                <p class="text-white text-opacity-60 mt-2">L'IA analyse vos notes</p>
            </div>
        </div>

        <!-- Résultat organisé -->
        <div id="resultContainer" class="glass rounded-2xl p-8 hidden">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-white">
                    <i class="fas fa-check-circle mr-2 text-green-400"></i>
                    Contenu Organisé
                </h2>
                <div class="space-x-2">
                    <button onclick="copyOrganized()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition">
                        <i class="fas fa-copy mr-2"></i>
                        Copier
                    </button>
                    <button onclick="downloadOrganized()" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg transition">
                        <i class="fas fa-download mr-2"></i>
                        Télécharger
                    </button>
                </div>
            </div>
            
            <div id="organizedContent" class="organized-content">
                <!-- Le contenu organisé sera affiché ici -->
            </div>
        </div>
    </div>

    <script>
        let currentOrganizedContent = '';
        let currentFilename = '';

        // Charger les fusions au démarrage
        window.addEventListener('DOMContentLoaded', () => {
            testAPI();
            loadFusions();
        });

        async function testAPI() {
            try {
                const response = await fetch('/ai/test');
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('apiStatus').classList.remove('hidden');
                }
            } catch (error) {
                console.error('Erreur test API:', error);
            }
        }

        async function loadFusions() {
            try {
                const response = await fetch('/ai/list_fusions');
                const data = await response.json();
                
                // L'API retourne data.data.fusions
                const fusions = data.data?.fusions || data.fusions || [];
                
                if (fusions.length > 0) {
                    displayFusions(fusions);
                } else {
                    document.getElementById('noFusions').classList.remove('hidden');
                }
            } catch (error) {
                console.error('Erreur chargement fusions:', error);
                document.getElementById('noFusions').classList.remove('hidden');
            }
        }

        function displayFusions(fusions) {
            const container = document.getElementById('fusionsList');
            container.innerHTML = '';
            
            fusions.forEach(fusion => {
                const typeIcon = fusion.type === 'global' ? 'fa-globe' : 'fa-folder';
                const typeColor = fusion.type === 'global' ? 'bg-purple-500' : 'bg-blue-500';
                
                const card = document.createElement('div');
                card.className = 'fusion-item glass rounded-xl p-6 cursor-pointer';
                card.onclick = () => organizeFusion(fusion);
                
                card.innerHTML = `
                    <div class="flex items-start">
                        <div class="${typeColor} rounded-lg p-3 mr-4">
                            <i class="fas ${typeIcon} text-white text-2xl"></i>
                        </div>
                        <div class="flex-1">
                            <h3 class="text-white font-semibold mb-1">${fusion.filename}</h3>
                            <p class="text-white text-opacity-60 text-sm">
                                ${fusion.type === 'global' ? 'Fusion globale' : 'Fusion par catégorie'}
                            </p>
                        </div>
                        <i class="fas fa-chevron-right text-white text-opacity-40"></i>
                    </div>
                `;
                
                container.appendChild(card);
            });
        }

        async function organizeFusion(fusion) {
            document.getElementById('loading').classList.add('active');
            document.getElementById('resultContainer').classList.add('hidden');
            
            try {
                const categoryName = fusion.filename.replace(/^fusion_(?:categories_|globale_)?/, '').replace(/\.txt$/, '').replace(/_\d{4}-\d{2}-\d{2}_\d{2}-\d{2}-\d{2}$/, '');
                
                const response = await fetch('/ai/organize', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        fusion_file: fusion.path,
                        category_name: categoryName
                    })
                });
                
                const data = await response.json();
                
                // L'API retourne data.data
                const result = data.data || data;
                
                if (data.success && result.organized_content) {
                    currentOrganizedContent = result.organized_content;
                    currentFilename = result.filename;
                    displayOrganizedContent(result.organized_content);
                } else {
                    alert('Erreur: ' + (data.error || result.error || 'Erreur inconnue'));
                }
            } catch (error) {
                console.error('Erreur organisation:', error);
                alert('Erreur lors de l\'organisation: ' + error.message);
            } finally {
                document.getElementById('loading').classList.remove('active');
            }
        }

        function displayOrganizedContent(content) {
            const container = document.getElementById('organizedContent');
            
            // Convertir le markdown en HTML basique
            let html = content
                .replace(/^# (.+)$/gm, '<h1>$1</h1>')
                .replace(/^## (.+)$/gm, '<h2>$2</h2>')
                .replace(/^- (.+)$/gm, '<li>$1</li>')
                .replace(/(<li>.*<\/li>\n?)+/g, '<ul>$&</ul>');
            
            container.innerHTML = html;
            document.getElementById('resultContainer').classList.remove('hidden');
            
            // Scroll vers le résultat
            document.getElementById('resultContainer').scrollIntoView({ behavior: 'smooth' });
        }

        function copyOrganized() {
            navigator.clipboard.writeText(currentOrganizedContent).then(() => {
                alert('Contenu copié dans le presse-papier !');
            }).catch(err => {
                console.error('Erreur copie:', err);
            });
        }

        function downloadOrganized() {
            const blob = new Blob([currentOrganizedContent], { type: 'text/markdown' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = currentFilename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>
