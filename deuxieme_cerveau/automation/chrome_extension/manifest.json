{
  "manifest_version": 3,
  "name": "Memobrik Auto-Starter",
  "version": "1.0.0",
  "description": "Démarre automatiquement le serveur Memobrik et ouvre le side panel",
  
  "permissions": [
    "nativeMessaging",
    "notifications",
    "sidePanel",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "http://localhost:5008/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Démarrer Memobrik",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}